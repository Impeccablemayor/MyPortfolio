<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyPortfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPortfolio.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Fira+Code&display=swap"
        rel="stylesheet">
        <link href="https://unpkg.com/aos@next/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/hover.css" asp-append-version="true">
</head>


<body>
    <!-- Preloader Start -->
    <div id="preloader" class="fixed inset-0 bg-white z-50 flex flex-col items-center justify-center">
        <div class="spinner mb-4">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- Preloader End -->

    <header class="max-w-[90rem] mx-auto">
        <nav class="flex justify-center py-4">
            <div
                class="bg-white/70 backdrop-blur-md shadow-lg border border-gray-200 rounded-2xl px-4 py-1 w-full max-w-7xl">
                <div class="flex justify-between items-center h-16">
                    <!-- Logo -->
                    <div class="flex items-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                            class="text-2xl font-bold text-blue-600">MyPortfolio</a>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="flex items-center sm:hidden">
                        <button id="menu-toggle"
                            class="text-gray-500 hover:text-gray-700 focus:outline-none focus:text-gray-700">
                            <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>

                    <!-- Navigation Links -->
                    <div class="hidden sm:flex sm:items-center sm:space-x-6 ">
                        <a asp-controller="Home" asp-action="Index"
                            class="text-gray-700 hover:text-blue-600 transition duration-300 hover-underline">Home</a>
                        <a href="#about" class="text-gray-700 hover:text-blue-600 transition duration-300 hover-underline">About</a>
                        <a href="#services"
                            class="text-gray-700 hover:text-blue-600 transition duration-300 hover-underline">Services</a>
                        <a href="#contact" class="text-gray-700 hover:text-blue-600 transition duration-300 hover-underline">Contact</a>
                        <a href="#resume" class="text-gray-700 hover:text-blue-600 transition duration-300 hover-underline">Resume</a>
                        <a href="#hire"
                            class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition duration-300">Hire
                            Me</a>
                    </div>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-menu" class="sm:hidden hidden mt-2 space-y-4 text-blue-600">
                    <a asp-controller="Home" asp-action="Index"
                        class="block px-1 py-2 rounded-full hover:bg-blue-600 transition duration-300 hover:text-white ">Home</a>
                    <a href="#about"
                        class="block px-1 py-2 rounded-full hover:bg-blue-600 transition duration-300 hover:text-white">About</a>
                    <a href="#services"
                        class="block px-1 py-2 rounded-full hover:bg-blue-600 transition duration-300 hover:text-white">Services</a>
                    <a href="#contact"
                        class="block px-1 py-2 rounded-full hover:bg-blue-600 transition duration-300 hover:text-white">Contact</a>
                    <a href="#resume"
                        class="block px-1 py-2 rounded-full hover:bg-blue-600 transition duration-300 hover:text-white">Resume</a>
                    <a href="#hire"
                        class="block bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition duration-300 text-center mb-4">Hire
                        Me</a>
                </div>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </header>
    <div class="hidden md:block fixed top-0 left-0 w-full h-full pointer-events-none z-0">
  <!-- Floating logos -->
  <img src="~/images/csharp.png" class="floating-logo left-10 top-10" alt="C#" />
  <img src="~/images/javascript.png" class="floating-logo right-20 top-40" alt="JavaScript" />
  <img src="~/images/react.png" class="floating-logo left-20 bottom-20" alt="React" />
  <img src="~/images/dotnet.png" class="floating-logo right-10 bottom-10" alt=".NET" />
</div>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MyPortfolio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Mobile menu toggle
        document.getElementById("menu-toggle").addEventListener("click", function () {
            const menu = document.getElementById("mobile-menu");
            menu.classList.toggle("hidden");
        });
    </script>
     <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>
    AOS.init();
    duration:1000;
    once: true;
  </script>
   <script>
    function openModal(id) {
      document.getElementById(id).classList.remove('hidden');
    }
    function closeModal(id) {
      document.getElementById(id).classList.add('hidden');
    }
  </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
